<%- include('partials/header.ejs') %>.


<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %> Post</div>
    <form class = "ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
       </div>
       <div class="field">
        <label>Author</label>
        <input type="text" name="blog[author]" value="<%= blog.author %>">
   </div>
   <div class="field">
    <label>Rating</label>
    <input type="number" step= "any" min="0" max="5" name="blog[rating]" value="<%= blog.rating %>"/>
   </div>
       <div class="field">
        <label>Image</label>
        <input type="text" name="blog[image]" value="<%= blog.image %>">
   </div>
   <div class="field">
    <label>Write your Review</label>
    <textarea name="blog[body]"><%= blog.body %></textarea>
</div>

      <input class="ui voilet basic button" type="submit">

    </form>
</div>



<%- include('partials/footer.ejs') %>.
