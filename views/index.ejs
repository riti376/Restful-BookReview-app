<%- include('partials/header.ejs') %>.


<div class="ui main text container">
    <div class="ui huge header">Book Review App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="ui small image">
                        <img src = "<%= blog.image %>">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>"><%=blog.title%></a>
                        <div class="meta">
                            <p><%= blog.author %></p>
                        </div>
                        <div class="meta">
                            <p><%= blog.rating %> <img src="star.png" width="13px" height="13px"></p>
                        </div>
                    <div class="description">
                    <p><%= blog.body.substring(0,200) %>...</p>
                </div>
                   <div class="extra">
                             <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">
                                 Read More
                                 <i class="right chevron icon"></i>
                             </a>
                         </div>
            </div>
           
                </div>
           <% }) %>
        </div>
    </div>
</div>



<%- include('partials/footer.ejs') %>.

